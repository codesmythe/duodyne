    92                              <1> PIC_PMREG	equ	PIC+0AH
    93                              <1> PIC_SRVR	equ	PIC+0CH
    94                              <1> PIC_IRQR	equ	PIC+0EH
    95                              <1> PIC_IRQSR	equ	PIC+10H
