   109                              <1> mask_dma0               equ     0004h
   110                              <1> mask_dma1               equ     0008h
   111                              <1> mask_int0               equ     0010h
   112                              <1> mask_int1               equ     0020h
   113                              <1> mask_int2               equ     0040h
